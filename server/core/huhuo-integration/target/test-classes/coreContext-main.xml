<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- modify the location of log4j.xml -->
	<bean id="log4jPropertyConfigurator" class="com.eray.integration.config.Log4jPropertyConfigurator">
		<property name="log4jConfigLocation" value="conf/log4j.xml"/>
	</bean>
	
	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<!-- <value>classpath:com/eray/integration/resources/system.properties</value> -->
			</list>
		</property> 
	</bean>
</beans>
